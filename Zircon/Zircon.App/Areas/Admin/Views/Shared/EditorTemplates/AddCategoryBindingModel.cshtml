@model AddCategoryBindingModel

@{
    ViewData["Title"] = "AddCategoryBindingModel";
}
<form asp-area="Admin" asp-controller="Products" asp-action="AddCategory" method="post" class="form-horizontal">
    @Html.FormGroupFor(model => model.Name)
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn bg-warning btn-default">Cancel</a>
        </div>
    </div>
</form>
