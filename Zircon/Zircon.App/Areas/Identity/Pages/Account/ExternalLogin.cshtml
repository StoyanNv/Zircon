@page
@model ExternalLoginModel
@{
    ViewData["Title"] = Localizer["Register"];
}
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
<h2>@ViewData["Title"]</h2>
<h4>
    @Localizer["AssociateAccount1"]
    @Model.LoginProvider
    @Localizer["AssociateAccount2"]
</h4>
<hr />
@Html.Partial("Manage/_StatusMessage", Model.StatusMessage)

<p class="text-info">
    @Localizer["SuccessfulAuthentication1"]
    <strong>@Model.LoginProvider</strong>.
    @Localizer["SuccessfulAuthentication2"]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Surname"></label>
                <input asp-for="Input.Surname" class="form-control" />
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Phone"></label>
                <input asp-for="Input.Phone" class="form-control" />
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">@Localizer["Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

