@page
@model AddAddress
@{
    ViewData["Title"] = "Address";
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model.District"></label>
                <input asp-for="Model.District" class="form-control" />
                <span asp-validation-for="Model.District" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Town"></label>
                <input asp-for="Model.Town" class="form-control" />
                <span asp-validation-for="Model.Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Street"></label>
                <input asp-for="Model.Street" class="form-control" />
                <span asp-validation-for="Model.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Number"></label>
                <input asp-for="Model.Number" class="form-control" />
                <span asp-validation-for="Model.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Postcode"></label>
                <input asp-for="Model.Postcode" class="form-control" />
                <span asp-validation-for="Model.Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Block"></label>
                <input asp-for="Model.Block" class="form-control" />
                <span asp-validation-for="Model.Block" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Floor"></label>
                <input asp-for="Model.Floor" class="form-control" />
                <span asp-validation-for="Model.Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Apartment"></label>
                <input asp-for="Model.Apartment" class="form-control" />
                <span asp-validation-for="Model.Apartment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Bell"></label>
                <input asp-for="Model.Bell" class="form-control" />
                <span asp-validation-for="Model.Bell" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}