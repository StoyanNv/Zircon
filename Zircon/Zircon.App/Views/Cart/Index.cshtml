@model IEnumerable<ShopingCartViewModel>
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Remove</td>
        </tr>
    </thead>
    <tbody>
        @Html.DisplayForModel()
    </tbody>
</table>
<p>
    The total Price is: @ViewData["TotalPrice"] Lv.
</p>

<form asp-controller="Cart" asp-action="FinishOrder" method="post">
    <div class="form-inline">
        <label for="giftCard">GIFTCARD code:</label>
        &nbsp;
        <input class="form-control" id="giftCard" name="giftCard" type="Text"/>
    </div>
    <div class="text-right">
        <input type="submit" value="Finish Order" class="btn-lg btn-success"/>
    </div>
</form>

