@page "{id}"
@using Microsoft.AspNetCore.Mvc.Localization
@model Zircon.App.Pages.Products.DetailsModel
@{
    ViewData["Title"] = Localizer["Details for"].Value + " " + Model.Model.Name;
}
@inject IViewLocalizer Localizer

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-4">
        <img style="max-width: 350px" src="@Html.DisplayFor(model => model.Model.PictureUrl)" alt="Cover image for @Html.DisplayFor(model => model.Model.Name)" />
    </div>
    <div class="col-8">
        <h2>@Localizer["Name"]: @Html.DisplayFor(model => model.Model.Name)</h2>
        <h5>@Localizer["Category"]: @Html.DisplayFor(model => model.Model.Category)</h5>
        <h5>@Localizer["Price"]: @Html.DisplayFor(model => model.Model.Price) @Localizer["Lv"].</h5>
        <h5>@Localizer["Weight"]: @Html.DisplayFor(model => model.Model.Weight) @Localizer["grams"]</h5>
        <a class="btn btn-lg btn-success" asp-controller="Cart" asp-action="AddToCart">@Localizer["Add to card"]</a>
        @if (User.IsInRole("Administrator"))
        {
            <a id="edit" class="btn btn-lg btn-warning" asp-area="Admin" asp-controller="Products" asp-action="Edit">@Localizer["Edit"]</a>
            <a id="delete" class="btn btn-lg btn-danger" data-toggle="confirmation" asp-area="Admin" asp-controller="Products" asp-action="Delete">@Localizer["Delete"]</a>
        }
    </div>
</div>