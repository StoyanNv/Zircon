@model IEnumerable<ShopingCartViewModel>
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Remove</td>
        </tr>
    </thead>
    <tbody>
        @Html.DisplayForModel()
    </tbody>
</table>

<p>
    The total Price is: @ViewData["TotalPrice"] Lv.
    <form asp-controller="Cart" asp-action="FinishOrder" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="giftCard">GIFTCARD code</label>
            <input  id="giftCard" name="giftCard" type="Text" />
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-push-2">
                <input type="submit" value="Finish Order" class="btn btn-success" />
            </div>
        </div>
    </form>
</p>

