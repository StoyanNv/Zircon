@page "{id}"
@model Zircon.App.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h2>Details for @Model.Model.Name</h2>

<div class="row">
    <div class="col-3">
        <img style="max-width: 200px" src="@Html.DisplayFor(model => model.Model.PictureUrl)" alt="Cover image for @Html.DisplayFor(model => model.Model.Name)" />
    </div>
    <div class="col-9">
        <h2>Name: @Html.DisplayFor(model => model.Model.Name)</h2>
        <h5>Category: @Html.DisplayFor(model => model.Model.Category)</h5>
        <h5>Price: @Html.DisplayFor(model => model.Model.Price) lv.</h5>
        <a class="btn btn-lg btn-warning" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.Model.Id">Add to card</a>
    </div>
</div>